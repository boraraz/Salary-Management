@model Account;
@{
    ViewData["Title"] = "Sign Up Page";
}

<form method="post">
    <div class="text-center">
        <h1 style="padding-bottom:8%; padding-top:15px" class="display-4">Sign Up</h1>
        <div style="margin-inline:20%">
            <div class="mb-2 row">
                <label class="col-sm-2 col-form-label text-end">Name:</label>
                <div class="col-sm-10">
                    <input asp-for="Name" type="text" class="form-control">
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>

                <label class="col-sm-2 col-form-label text-end">Mail:</label>
                <div class="col-sm-10">
                    <input asp-for="Mail" type="text" class="form-control">
                </div>
                <span asp-validation-for="Mail" class="text-danger"></span>

                <label class="col-sm-2 col-form-label text-end">Pass:</label>
                <div class="col-sm-10">
                    <input asp-for="password" type="password" class="form-control">
                </div>
                <span asp-validation-for="password" class="text-danger"></span>
            </div>
            <div>
                <button type="submit" class="btn" style="color: white; background-color: blue; text-decoration: none">SignUp</button>
            </div>
        </div>
    </div>
</form>


